{
	"trailingComma": "es5",
	"tabWidth": 4,
	"semi": true,
	"singleQuote": true,
	"printWidth": 100,
	"arrowParens": "always",
	"quoteProps": "as-needed",
	"bracketSameLine": false,
	"proseWrap": "preserve",
	"endOfLine": "lf",
	"embeddedLanguageFormatting": "auto",
	"useTabs": true,
	"bracketSpacing": true,
	"autoCloseBrackets": true,
	"autoCloseTags": true,
	"scrollBeyondLastLine": false
}
